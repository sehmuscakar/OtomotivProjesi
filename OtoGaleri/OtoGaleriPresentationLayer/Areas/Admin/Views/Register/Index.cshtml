@model IEnumerable<DataAccessLayer.Entities.AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Kayıtlı Kullanıcıların Liste Paneli</h3>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Adı")
            </th>
            <th>
                @Html.DisplayName("Soyadı")
            </th>
            <th>
                @Html.DisplayName("Hakkında")
            </th>
            <th>
                @Html.DisplayName("Fotraf")
            </th>
            <th>

                @Html.DisplayName("Telefon")
            </th>
            <th>
                @Html.DisplayName("Adres")
            </th>
        
            <th>
                @Html.DisplayName("Kullanı Adı")
            </th>
    
            <th>
                @Html.DisplayName("Mail")
            </th>
         
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" class="form control" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
             
                 <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
