@model DataAccessLayer.Entities.CarDetay
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Araç Detay</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Sailor/assets/img/favicon.png" rel="icon">
    <link href="~/Sailor/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  

    <!-- Vendor CSS Files -->
    <link href="~/Sailor/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/Sailor/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Sailor/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Sailor/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Sailor/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Sailor/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Sailor/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Sailor/assets/css/style.css" rel="stylesheet">

  
</head>

<body>

    <main id="main">
        <section id="portfolio-details" class="portfolio-details">
            <div class="container">
                <div class="row gy-4">

                    <div class="col-lg-8">
                        <div class="portfolio-details-slider swiper">
                            <div class="swiper-wrapper align-items-center">

                                <div class="swiper-slide">
                                    <img src="~/Img/@Model.ImageUrl" alt="">
                                </div>
                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="portfolio-info">
                            <h3>Araç Detayları</h3>
                            <ul>
                                <li><strong>İlan Yayını</strong>:@Model.AdvertTime</li>
                                <li><strong>Fiyat</strong>:@Model.Price TL</li>
                                <li><strong>Model Yılı</strong>: @Model.Year</li>
                                <li><strong>Km</strong>: @Model.Km</li>
                                @*   <li><strong>Project URL</strong>: <a href="#">www.example.com</a></li>*@
                            </ul>
                        </div>
                        <div class="portfolio-description">
                            <h2>Araç Hakında</h2>
                            <p>
                                @Model.Description.
                            </p>
                        </div>
                    </div>

                </div>

            </div>
        </section>

    </main><!-- End #main -->

    
    <!-- Vendor JS Files -->
    <script src="~/Sailor/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Sailor/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Sailor/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Sailor/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Sailor/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/Sailor/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Sailor/assets/js/main.js"></script>

</body>

</html>






