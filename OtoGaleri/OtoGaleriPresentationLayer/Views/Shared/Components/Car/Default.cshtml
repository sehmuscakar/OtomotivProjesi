@model List<DataAccessLayer.Dtos.AdminDtos.CarListDto>
<section id="portfolio" class="portfolio">
    <div class="container">
        <div class="section-title">
            <h2>Araçlarımız</h2>
        </div>
    @await Component.InvokeAsync("CarKategori")
        <div class="row portfolio-container">
            @foreach (var item in Model)
            {


                    <div class="col-lg-4 col-md-6 portfolio-item @item.CarKategoriName">
                        <div class="portfolio-wrap">
                            <img src="~/Img/@item.ImageUrl" class="img-fluid" alt="" width="430" height="150">
                            <div class="portfolio-info">
                                <h4>@item.Title</h4>
                                <p>@item.CarKategoriName</p>
                                <div class="portfolio-links">
                                    <a href="~/Img/@item.ImageUrl" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.Title"><i class="bx bx-plus"></i></a>
                                    <a href="/Home/CarDetay/@item.CarDetayId" class="portfolio-details-lightbox" data-glightbox="type: external" title="Portfolio Details"><i class="bx bx-link"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
            }


        </div>

    </div>
</section>

