@model List<DataAccessLayer.Entities.Service>
<section id="services" class="services">
    <div class="container">
        <div class="section-title">
            <h2>Hizmetler</h2>
        </div>
        <div class="row">
        @foreach (var item in Model)
            {
            <div class="col-md-6 mt-4 mt-md-0">
              
                    <img src="~/Img/@item.ImageUrl" class="img-fluid" alt="" height="250" width="420" >
                    <h4><a href="/Home/Anasayfa">@item.Title</a></h4>
                    <p>@item.Description</p>
                </div>
            }
        </div>
    </div>
</section>
