@model List<DataAccessLayer.Entities.About>
<section id="about" class="about">
    <div class="container">
        <div class="section-title">
            <h2>Hakkımızda</h2>
        </div>
        <div class="row content">
            @foreach (var item in Model)
            {
                
         
            <div class="col-lg-6">        
                  
                    <img class="img-fluid" src="~/Img/@item.ImageUrl" alt="" width="1500" height="800" />
          
            </div>
            <div class="col-lg-6 pt-4 pt-lg-0">
                <p>
             @item.AboutDecription
                </p>
                <ul>
                    <li><i class="ri-check-double-line"></i> @item.Title1</li>
                        <li><i class="ri-check-double-line"></i> @item.Title12</li>
                        <li><i class="ri-check-double-line"></i> @item.Title3</li>
                </ul>
         
            </div>
            }
        </div>

    </div>
</section><!-- End About Section -->